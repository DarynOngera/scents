---
// Product Collection component
export interface Props {
    products: Array<{
        id: string;
        name: string;
        description: string;
        price: number;
        image?: string;
        category?: string;
        notes?: string[];
    }>;
}

const { products } = Astro.props;
---

<section id="collection" class="collection">
    <div class="container">
        <h2 class="section-title">Our Signature Collection</h2>
        <div class="products-grid">
            {products.map((product) => (
                <div class="product-card" data-product={product.id}>
                    <div class="product-image-container">
                        <div class="product-image">
                            {product.image ? (
                                <img src={product.image} alt={product.name} class="perfume-image" />
                            ) : (
                                <div class="product-placeholder">
                                    <div class="luxury-bottle"></div>
                                </div>
                            )}
                            <div class="luxury-shine"></div>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <button class="luxury-btn quick-view" data-product={product.id}>
                                    <i class="fas fa-eye"></i>
                                    <span>Quick View</span>
                                </button>
                                <button class="luxury-btn add-to-wishlist" data-product={product.id}>
                                    <i class="fas fa-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="product-info">
                        {product.category && <span class="product-category">{product.category}</span>}
                        <h3 class="product-name">{product.name}</h3>
                        <p class="product-description">{product.description}</p>
                        {product.notes && (
                            <div class="product-notes">
                                <span class="notes-label">Notes:</span>
                                <div class="notes-list">
                                    {product.notes.map((note) => (
                                        <span class="note-tag">{note}</span>
                                    ))}
                                </div>
                            </div>
                        )}
                        <div class="product-price-section">
                            <div class="product-price">${product.price}</div>
                            <div class="price-label">50ml Eau de Parfum</div>
                        </div>
                        <button class="luxury-add-to-cart" data-product={product.id} data-price={product.price}>
                            <span class="btn-text">Add to Cart</span>
                            <i class="fas fa-shopping-bag"></i>
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
/* Collection Section */
.collection {
    padding: 120px 0;
    background: linear-gradient(135deg, var(--luxury-cream) 0%, #ffffff 100%);
    position: relative;
}

.collection::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--luxury-gold), transparent);
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 4rem;
    margin-top: 3rem;
}

.product-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(212, 175, 55, 0.1);
    opacity: 0;
    transform: translateY(50px);
    animation: luxuryFadeIn 0.8s ease forwards;
    position: relative;
}

.product-card:nth-child(2) {
    animation-delay: 0.1s;
}

.product-card:nth-child(3) {
    animation-delay: 0.2s;
}

.product-card:nth-child(4) {
    animation-delay: 0.3s;
}

.product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.product-image {
    position: relative;
    height: 300px;
    overflow: hidden;
}

.product-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(145deg, #f8f8f8, #e8e8e8);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.product-placeholder::before {
    content: '';
    width: 80px;
    height: 120px;
    background: linear-gradient(145deg, #e0e0e0, #d0d0d0);
    border-radius: 10px 10px 30px 30px;
    position: relative;
}

.product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(44, 44, 44, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.product-card:hover .product-overlay {
    opacity: 1;
}

.quick-view {
    background: white;
    color: #2c2c2c;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 2px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.quick-view:hover {
    background: #8b7355;
    color: white;
}

.product-info {
    padding: 1.5rem;
}

.product-info h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: #2c2c2c;
}

.product-description {
    color: #666;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    line-height: 1.5;
}

.product-price {
    font-size: 1.5rem;
    font-weight: 600;
    color: #8b7355;
    margin-bottom: 1rem;
}

.add-to-cart {
    width: 100%;
    background: #2c2c2c;
    color: white;
    border: none;
    padding: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    letter-spacing: 0.5px;
}

.add-to-cart:hover {
    background: #8b7355;
}

/* Responsive Design */
@media (max-width: 768px) {
    .products-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
}
</style>
