---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ProductCollection from '../components/ProductCollection.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import ShoppingCart from '../components/ShoppingCart.astro';

// Import JSON data
import perfumeData from '../data/perfumes.json';
import siteData from '../data/site.json';

// Extract data
const { products, categories, productTypes, genders } = perfumeData;
const { site, navigation } = siteData;
---

<Layout title={`${site.name} - Luxury Perfumes`}>
	<Navigation navigation={navigation} site={site} />
	<Hero site={site} />
	<ProductCollection products={products} categories={categories} productTypes={productTypes} genders={genders} />
	<About />
	<Contact contact={site.contact} />
	<Footer site={site} />
	<ShoppingCart />
</Layout>
